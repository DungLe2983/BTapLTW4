<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MotoStore.Views.Pages.IOPagePages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="MotoStore.Views.Pages.IOPagePages.IOSanPhamPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IOSanPhamPage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="AddSP" NavigationUIVisibility="Hidden" />

        <Grid Grid.RowSpan="2">
            <TextBlock Text="KHO SẢN PHẨM" FontSize="13" FontWeight="Black" FontFamily="Times New Roman"/>
            <Button x:Name="btnAddNewSP" Content="Sản Phẩm Mới" Width="110" Click="btnAddNewSP_Click" HorizontalAlignment="Center"/>

        </Grid>
        <ScrollViewer Grid.Column="1" Background="DarkSlateBlue" Margin="3,3,0,0" Grid.RowSpan="2">
            <StackPanel>
                <TextBlock Text="Items" Margin="10" FontSize="15" FontWeight="Medium" />
                <StackPanel Margin="20 0">
                    <ItemsControl x:Name="ListViewProduct" ItemsSource="{Binding Product}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="10" Width="110" Height="160">
                                    <StackPanel>
                                        <Border Width="104" Height="83" CornerRadius="5" Margin="5">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding Image}" />
                                            </Border.Background>
                                        </Border>
                                        <TextBlock Margin="5" Text="{Binding NameProduct}" FontSize="14" FontWeight="Medium"/>
                                        <TextBlock Margin="5 0" Text="{Binding ValueMoney, StringFormat={}{0:C}}" FontSize="14" FontWeight="Black"/>
                                        
                                    </StackPanel>
                                </Border>
                            </DataTemplate>

                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>

                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>


                </StackPanel>
            </StackPanel>


        </ScrollViewer>


    </Grid>
</Page>
